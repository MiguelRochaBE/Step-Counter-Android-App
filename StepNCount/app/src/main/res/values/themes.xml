<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StepNCount" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark mode -->

    <style name="Screen">
        <item name="android:background">@color/Background</item>
    </style>

    <!-- Text in dark mode -->

    <style name="Text">
        <item name="android:textColor">@color/Text</item>
    </style>

    <!-- Buttons on results page -->

    <style name="BtnResults" parent="ThemeOverlay.AppCompat">
        <item name="android:colorAccent">@color/Pickr</item>
    </style>

    <!-- Text Size on results page -->

    <style name="TxtSize" parent="ThemeOverlay.AppCompat">
        <item name="android:textSize">40dp</item>
    </style>

    <style name="Theme.StepNCount.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StepNCount.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StepNCount.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>